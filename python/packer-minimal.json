{
  "builders": [
    {
      "type": "docker",
      "image": "evgenymarkov/ubuntu:20.04-minimal",
      "pull": false,
      "exec_user": "root",
      "export_path": "./build/minimal.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "../library/update.sh"
    },
    {
      "type": "shell",
      "script": "../library/python.sh"
    },
    {
      "type": "shell",
      "script": "../library/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "evgenymarkov/python",
        "tag": "3.8-minimal",
        "changes": [
          "USER ubuntu",
          "CMD [\"python\"]",
          "WORKDIR /home/ubuntu"
        ]
      }
    ]
  ]
}
