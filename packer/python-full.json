{
  "builders": [
    {
      "type": "docker",
      "image": "ghcr.io/evgenymarkov/ubuntu:20.04-full",
      "exec_user": "root",
      "export_path": "./build/python-full.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./library/update.sh"
    },
    {
      "type": "shell",
      "script": "./library/python.sh"
    },
    {
      "type": "shell",
      "script": "./library/python-pip.sh"
    },
    {
      "type": "shell",
      "script": "./library/python-pipenv.sh"
    },
    {
      "type": "shell",
      "script": "./library/python-black.sh"
    },
    {
      "type": "shell",
      "script": "./library/python-isort.sh"
    },
    {
      "type": "shell",
      "script": "./library/python-flake8.sh"
    },
    {
      "type": "shell",
      "script": "./library/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "ghcr.io/evgenymarkov/python",
        "tag": "3.8-full",
        "changes": [
          "USER ubuntu",
          "CMD [\"python\"]",
          "WORKDIR /home/ubuntu",
          "ENV LANG en_US.UTF-8",
          "ENV LANGUAGE en_US.UTF-8",
          "ENV LC_ALL en_US.UTF-8",
          "ENV TZ Etc/UTC",
          "ENV PIPENV_VENV_IN_PROJECT 1"
        ]
      },
      {
        "type": "docker-push"
      }
    ]
  ]
}
