{
  "builders": [
    {
      "type": "docker",
      "image": "ghcr.io/evgenymarkov/ubuntu:20.04-full",
      "exec_user": "root",
      "export_path": "./build/node-full.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./library/update.sh"
    },
    {
      "type": "shell",
      "script": "./library/node.sh"
    },
    {
      "type": "shell",
      "script": "./library/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "ghcr.io/evgenymarkov/node",
        "tag": "14-full",
        "changes": [
          "USER ubuntu",
          "CMD [\"node\"]",
          "WORKDIR /home/ubuntu",
          "ENV LANG en_US.UTF-8",
          "ENV LANGUAGE en_US.UTF-8",
          "ENV LC_ALL en_US.UTF-8",
          "ENV TZ Etc/UTC"
        ]
      }
    ]
  ]
}
