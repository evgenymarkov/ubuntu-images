{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "exec_user": "root",
      "export_path": "./build/ubuntu-minimal.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./library/upgrade.sh"
    },
    {
      "type": "shell",
      "script": "./library/user.sh"
    },
    {
      "type": "shell",
      "script": "./library/locales.sh"
    },
    {
      "type": "shell",
      "script": "./library/timezone.sh"
    },
    {
      "type": "shell",
      "script": "./library/network.sh"
    },
    {
      "type": "shell",
      "script": "./library/completion.sh"
    },
    {
      "type": "shell",
      "script": "./library/nano.sh"
    },
    {
      "type": "shell",
      "script": "./library/prompt.sh"
    },
    {
      "type": "shell",
      "script": "./library/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "ghcr.io/evgenymarkov/ubuntu",
        "tag": "20.04-minimal",
        "changes": [
          "USER ubuntu",
          "CMD [\"bash\"]",
          "WORKDIR /home/ubuntu",
          "ENV LANG en_US.UTF-8",
          "ENV LANGUAGE en_US.UTF-8",
          "ENV LC_ALL en_US.UTF-8",
          "ENV TZ Etc/UTC"
        ]
      }
    ]
  ]
}
